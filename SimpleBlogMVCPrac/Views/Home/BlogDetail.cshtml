@{
    ViewData["Title"] = @Model.BlogTitle;
}

@model SimpleBlogMVCPrac.Models.Entity.Blog;
<style>
    /*Some root variables that will be utilized throughout css styling*/
    :root {
        --primary: rgb(55, 57, 56);
        --secondary: rgb(66, 91, 76);
        --grey: rgb(124, 129, 126);
        --light-grey: rgb(105, 119, 113);
        --glass: rgba(255, 255, 255, 0.1);
        --glass-border: rgba(255, 255, 255, 0.5);
    }
    /*Global properties (universal selector)*/
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(145deg, var(--primary), var(--secondary));
        background-size: 200% 200%;
        width: 100%;
        height: 100vh;
        animation: bgShift 10s ease infinite;
        color: white;
    }

    .blogContainer{
        background: var(--glass);
        border: var(--glass-border);
        border-radius: 20px;
        padding: 40px;
        backdrop-filter: blur(50px);
        -webkit-backdrop-filter: blur(50px);
        box-shadow: 0 5px 10px var(--glass);
    }

    .blogBody{
        padding:10px;
    }

    .blogBody a{
        background: linear-gradient(45deg, var(--glass), var(--secondary));
        background-size: 200% 200%;
        position: relative;
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid var(--glass-border);
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.5s ease-in-out;
        animation: buttonGradient 5s ease-in-out infinite;
    }

    .blogBody a:hover{
        border: 1px solid var(--glass);
        transform: translateY(-2px);
        background: linear-gradient(250deg, var(--glass), var(--secondary));
    }

    .blogBody .btn:focus{
		background: linear-gradient(250deg, var(--glass), var(--glass));
        transition: all 0.5s ease-in-out;
    }
    @@keyframes buttonGradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }


    
</style>

<div class="blogContainer" >
    <div class="blogBody" >
        <h1 >@Model.BlogTitle </h1 >
        <p > <strong > Published on:</strong > @Model.CreatedAt.ToString("MMMM d, yyyy") </p >
    <div class="blogContent" >
        <p >@Model.BlogContent </p >
    </div >
        <a class="btn btn-primary" asp-action="UpdateBlog" asp-route-id="@Model.Id">Update</a>
        <a class="btn btn-primary" href="@Url.Action("Index", "Home")" > Back to Posts</a >
        <a class="btn btn-danger" asp-action="DeleteBlog" asp-route-id="@Model.Id" onclick="if(confirm('Are you sure you want to delete this blog post?')){window.location.href='/Home/DeleteBlog/@Model.Id'}else{return false;}">Delete</a>        <!--Simple confirm popup-->
    </div >
</div >