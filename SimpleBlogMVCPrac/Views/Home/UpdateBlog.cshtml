
@{
	ViewData["Title"] = "Update Blog";
}
@model SimpleBlogMVCPrac.Models.Entity.Blog;


<style>
    :root {
        --primary: rgb(55, 57, 56);
        --secondary: rgb(66, 91, 76);
        --grey: rgb(124, 129, 126);
        --light-grey: rgb(105, 119, 113);
        --glass: rgba(255, 255, 255, 0.1);
        --glass-border: rgba(255, 255, 255, 0.5);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(145deg, var(--primary), var(--secondary));
        background-size: 200% 200%;
        width: 100%;
        height: 100vh;
        animation: bgShift 10s ease infinite;
        color: white;
    }

    .blogForm {
        background: var(--glass);
        border: var(--glass-border);
        border-radius: 20px;
        padding: 40px;
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        box-shadow: 0 5px 10px var(--glass);
    }

    .blogForm .form-control {
        background: var(--glass);
        border: var(--glass-border);
        color: white;
        padding: 10px 10px;
        border-radius: 10px;
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        box-shadow: 0 5px 10px var(--glass);
        transition: all 0.5s ease-in-out;
    }

    .blogForm .form-control:hover{
		transform: translateY(-2px);
		box-shadow: 0 5px 10px var(--glass);
		border-color: var(--glass-border);
		transition: all 0.5s ease-in-out;
    }

    .blogForm .btn {
        background: linear-gradient(45deg, var(--glass), var(--secondary));
        background-size: 200% 200%;
        position: relative;
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid var(--glass-border);
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.5s ease-in-out;
        animation: buttonGradient 5s ease-in-out infinite;
    }

    .blogForm .btn:before{
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, var(--glass), var(--glass), var(--glass));
        backdrop-filter: blur(20px);
        border-radius: 20px;
        -webkit-backdrop-filter: blur(20px);
        transition: left 0.5s ease;
    }

    .blogForm .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 10px var(--glass);
        border-color: var(--glass-border);
        transition: all 0.5s ease-in-out;
    }

    .blogForm .btn:active {
        transform: translateY(-1px);
    }





    @@keyframes buttonGradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }
</style>

<div class="blogForm">
    <form asp-action="UpdateBlog" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group mb-4">
            <label for="BlogTitle" class="control-label mb-2"></label>
            <input asp-for="BlogTitle" class="form-control" id="BlogTitle" name="BlogTitle" />
            <span asp-validation-for="BlogTitle" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label for="BlogContent" class="control-label mb-2"></label>
            <textarea asp-for="BlogContent" class="form-control" id="BlogContent" name="BlogContent" rows="10"></textarea>
            <span asp-validation-for="BlogContent" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-action="BlogDetail" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>